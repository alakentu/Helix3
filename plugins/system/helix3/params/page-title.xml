<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/plugins/system/helix3/fields">
		<fieldset name="pagetitle" label="HELIX_PAGE_TITLE">			
			<field name="enable_page_title" type="radio" class="btn-group btn-group-yesno" default="0" label="ENABLE_PAGE_TITLE" description="ENABLE_PAGE_TITLE_DESC" filter="integer">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
				
			<field name="page_title_alt" type="text" showon="enable_page_title:1" default="" label="PAGE_TITLE_ALT" description="PAGE_TITLE_ALT_DESC" />
			<field name="page_subtitle" type="text" showon="enable_page_title:1" default="" label="PAGE_SUBTITLE" description="PAGE_SUBTITLE_DESC" />
			<field name="page_title_bg_color" type="color" showon="enable_page_title:1" label="PAGE_BACKGROUND_COLOR" description="PAGE_BACKGROUND_COLOR_DESC" />
			<field name="page_title_bg_image" type="media" showon="enable_page_title:1" label="PAGE_BACKGROUND_IMAGE" description="PAGE_BACKGROUND_IMAGE_DESC" />
		</fieldset>
	</fields>
</form>
